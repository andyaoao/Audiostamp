<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RecordFragment" >

    <FrameLayout	android:id="@+id/drawframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        
        >

        <com.wang.audiostamp.view.AudioDisplayView
            android:id="@+id/waveform"
            android:background="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <EditText
            android:id="@+id/labelText"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            android:layout_marginRight="28dp"
            android:background="#00ffffff"
            android:ems="10"
            android:inputType="textPostalAddress" />
    </FrameLayout>


    
    <ImageButton
        android:id="@+id/stopBtn"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/stop_btn"
        android:visibility="invisible"
         />

            <View	android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:background="#FFED661C"
        	android:layout_gravity="center"
        	android:layout_alignBottom="@+id/stopBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="74dip"
            />
    <ImageButton
        android:id="@+id/logoBtn"
        android:layout_width="160dip"
        android:layout_height="160dip"
        android:background="@drawable/bt_center01" 
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/stopBtn"
        android:layout_centerHorizontal="true"
        />
	
    <FrameLayout
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/stopBtn"
        android:visibility="invisible"
         >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageButton
                android:id="@+id/btnL1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/ss_blue" />

            <ImageButton
                android:id="@+id/btnL2"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_above="@+id/btnL1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ss_green" />

            <ImageButton
                android:id="@+id/btnL3"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_above="@+id/btnL2"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/ss_orange" />

            <ImageButton
                android:id="@+id/btnL4"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_above="@+id/btnL3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/ss_pink" />

            <ImageButton
                android:id="@+id/btnL5"
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:layout_above="@+id/btnL4"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="32dp"
                android:background="@drawable/ss_yellow" />

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>